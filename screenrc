caption always "%{yk} %c %{= dd} %{+b dk}%-w%{+b dd}%n %t%{-}%+w%<"

defutf8 on
crlf off
startup_message off
defscrollback 1000
defmonitor on
activity "Activity on %n"
vbell off

#
## do not trash BackSpace, usually DEL
bindkey -k kb
bindkey -d -k kb
#
## do not trash Delete, usually ESC [ 3 ~
bindkey -k kD
bindkey -d -k kD
